<body>

    <!-- Home page html code -->
    <div class="main">
        <div class="navbar">
            <div class="icon">
                <h2 class="logo"><u>UNIKON</u></h2>
            </div>
            <div class="menu">
                <ul>
                    <li><a href="#">HOME</a></li>
                    <li><a href="#aboutus">ABOUT</a></li>
                    <li><a href="#ourservices">SERVICES</a></li>
                    <li><a href="#contactus">CONTACT</a></li>
                    <li><a href="/profile">PROFILE</a></li> 
                    <li><a href="/">LOGOUT</a></li>   
                </ul>
            </div>
            <div class="search">
               
                   <form action="/searchbycity" method="post">
                    <input class="srch" type="search" name="city" placeholder="Search city">
                    <a href="#"><button class="btn" type="submit"><i class="fa-solid fa-magnifying-glass" style="color:black;"></i></button></a> 
                   </form>       
            </div>
           
        </div>
        <div class="content">
            <div class="item-container">

                <%
                var itemsPerPage = 4;
                const startIndex = (pagenumber - 1) * itemsPerPage;
                let endIndex = startIndex + itemsPerPage;
                const itemsToDisplay = itemlist.slice(startIndex, endIndex);
               %>
            <% itemsToDisplay.forEach(item => { %>
                <div class="item1">
                    <img   src=<%=item?.img%> alt= <%=item?.name_of_item%> >
                    <div class="item-details">
                        <h3  ><%= item?.name_of_item %></h3>
                        <p  >Price: <%= item?.price_of_item.toFixed(2) %></p>
                        <p >Address: <%= item?.address %></p>
                         <form action="/productdescription" method="post">
                            <input type="hidden" name="img" value="<%= item?.img %>" />
                            <input type="hidden" name="name_of_item" value="<%= item?.name_of_item %>" />
                            <input type="hidden" name="price_of_item" value="<%= item?.price_of_item %>" />
                            <input type="hidden" name="address" value="<%= item?.address %>" />
                            <button type="submit">more details</button>
                         </form>
                    </div>
                 </div>
            <% }); %>
            <%if(itemsToDisplay.length!=0){%>
                <div class="pagination">
                   <form action="/next" method="post">
                    <button type="submit">next</button>
                   </form>
                </div>
                <% }%>
                <%if(itemsToDisplay.length==0){%>
                    <h1>opps!! NO further data found </h1>
                    <form action="/afterlogin" method="get">
                        <button type="submit">ok</button>
                    </form>
               <% }%>
            </div>
            
        </div>
    </div>

    <!-- services page code here -->
   <div id="ourservices">
    <div class="servicebody">
    
        <h1 class="h1class">Our Features & Services.</h1>
